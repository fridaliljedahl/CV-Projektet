@model CVDetails
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@{
	ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<div class="gridCV">
	<div class="CVleft">
		<div class="leftText"></div>
		<a class="edit" href="@Url.Action("Index","CV", new { userID = UserManager.GetUserId(User)})">
			<span class="material-symbols-outlined">
				settings
			</span>
			<br />
			<p>Tillbaka</p>
		</a>

		@try
		{
			if (@Model.User.ImageModel.Name.Any())
			{
				<img class="profilepicture" src="@("~/image/" + @Model.User.ImageModel.Name)" asp-append-version="true" />
			}
		}
		catch (Exception ex)
		{
			<span class="material-symbols-outlined" style="font-size:250px; color: #FFFEF6; ">
				account_circle
			</span>
		}
		<a class="edit" href="@Url.Action("Index","Image", new { userID = User.Identity})">
			<span class="material-symbols-outlined">
				edit
			</span>
			<br />
			<p>Hantera profilbild</p>
		</a>

		@try
		{
			<h1>@Model.User.FirstName @Model.User.LastName</h1>
			<div class="leftText">
				<p>@Model.User.PhoneNumber</p>
				<p>@Model.User.Email</p>
			</div>
			<div class="leftText">
				<p>@Model.User.Address.Street</p>
				<p>@Model.User.Address.PostalCode, @Model.User.Address.City</p>
			</div>

			<p>@Model.User.Description</p>
		}
		catch (Exception ex) { }
		<div class="cvSocialLinks">
			<a href="#" class="fa fa-twitter"></a>
			<a href="#" class="fa fa-linkedin"></a>
			<a href="#" class="fa fa-instagram"></a>
		</div>
	</div>
	<div class="CVright">

		@try
		{
			<h2 class="competence">Kompetenser</h2>

			<ul>
				@foreach (var item in Model.CompetenceList)
				{
					<li>@item.Name</li>
				}
			</ul>
			<a href="@Url.Action("Competence", "CVSettings", new { userID = UserManager.GetUserId(User)})"><button class="btn btn-dark">Lägg till fler kompetenser</button></a>
			<br />
			<br />
			<h2 class="education">Utbildningar</h2>
			@foreach (var item in Model.ExperienceList)
			{
				if (item.Type.Equals("Education"))
				{
					<h3>@item.Title</h3>
					<p>@item.StartDate.ToString().Substring(0, 10) - @item.EndDate.ToString().Substring(0, 10)</p>
					<p>@item.Place, @item.City</p>
					<p>@item.Description</p>
				}
			}
			<a href="@Url.Action("Education", "CVSettings", new { userID = UserManager.GetUserId(User)})"><button class="btn btn-dark">Lägg till fler utbildningar</button></a>
			<br />
			<br />
			<h2 class="work">Arbetslivserfarenhet</h2>
			@foreach (var item in Model.ExperienceList)
			{
				if (item.Type.Equals("Work"))
				{
					<h3>@item.Title</h3>
					<p>@item.StartDate.ToString().Substring(0, 10) - @item.EndDate.ToString().Substring(0, 10)</p>
					<p>@item.Place , @item.City</p>
					<p>@item.Description</p>
				}
			}
			<a href="@Url.Action("Competence", "CVSettings", new { userID = UserManager.GetUserId(User)})"><button class="btn btn-dark">Lägg till fler arbeten</button></a>
			<br />
			<br />
			<h2 class="coure">Kurser</h2>
			@foreach (var item in Model.ExperienceList)
			{
				if (item.Type.Equals("Course"))
				{
					<h3>@item.Title</h3>
					<p>@item.StartDate.ToString().Substring(0, 10) - @item.EndDate.ToString().Substring(0, 10)</p>
					<p>@item.Place , @item.City</p>
					<p>@item.Description</p>
				}
			}
			<a href="@Url.Action("Competence", "CVSettings", new { userID = UserManager.GetUserId(User)})"><button class="btn btn-dark">Lägg till fler kurser</button></a>
			<br />
			<br />
			@if (Model.ExperienceList.Where(e => e.Type.Equals("Misc")).Any())
			{
				<h2 class="misc">Övrigt</h2>
				<p></p>
			}
			<a href="@Url.Action("Competence", "CVSettings", new { userID = UserManager.GetUserId(User)})"><button class="btn btn-dark">Lägg till fler kurser</button></a>
			<br />
			<br />
			@if (Model.ProjectList.Any())
			{
				<h2 class="project">Projekt</h2>
				@foreach (var project in Model.ProjectList)
				{
					<h3>@project.Name</h3>
					<p>@project.Description</p>
				}
			}
			<a asp-area="" asp-controller="Projects" asp-action="Index">
				<button class="btn btn-dark">
					Gå med i projekt
				</button>
			</a>
			<a asp-area="" asp-controller="Projects" asp-action="CreateProject">
				<button class="btn btn-dark">
					Skapa projekt
				</button>
			</a>
		}
		catch (Exception ex) { }
	</div>
</div>