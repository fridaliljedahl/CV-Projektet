@model LoginViewModel

<h1>Logga in</h1>
<br />
		<form method="post" asp-controller="Account" asp-action="LogIn">
			<div class="mb-3">
				<label for="" class="form-label">Användarnamn</label>
				<input asp-for="UserName" class="form-control" placeholder="Användarnamn">
			</div>
			<div class="mb-3">
				<label for="exampleDropdownFormPassword1" class="form-label">Lösenord</label>
				<input type="password" asp-for="Password" type="password" class="form-control" placeholder="Lösenord">
			</div>
			<div class="mb-3">
				<div class="form-check">
					<input type="checkbox" class="form-check-input" id="dropdownCheck">
					<label class="form-check-label" for="dropdownCheck">
						Kom ihåg mig
					</label>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Logga in</button>
		</form>
		<div class="dropdown-divider"></div>
		<a class="dropdown-item" href="#">Är du ny här? Registrera dig</a>
