@model LoginViewModel

<h1>Logga in</h1>
<br />
<form method="post" asp-controller="Account" asp-action="LogIn">
	<div class="mb-3">
		<label for="" class="form-label">Användarnamn</label>
		<input asp-for="UserName" class="form-control inputBox" placeholder="Användarnamn">
		<span asp-validation-for="UserName" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<label for="exampleDropdownFormPassword1" class="form-label">Lösenord</label>
		<input type="password" asp-for="Password" type="password" class="form-control inputBox" placeholder="Lösenord">
		<span asp-validation-for="Password" class="text-danger"></span>
	</div>
	<div class="mb-3">
		<div class="form-check">
			<input type="checkbox" class="form-check-input" id="dropdownCheck">
			<label class="form-check-label" for="dropdownCheck">
				Kom ihåg mig
			</label>
		</div>
	</div>
	<span class="text-danger">@Model.ErrorMessage</span>
	<br />
	<a class="dropdown-item" href="#">Är du ny här? Registrera dig</a>

	<br />
	<button type="submit" class="btn btn-primary">Logga in</button>
</form>
<div class="dropdown-divider"></div>
