@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - CV_Projektet</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/CV_Projektet.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar">
			<a class="logo" asp-area="" asp-controller="Home" asp-action="Index">CVGROTTAN</a>
			<div class="navLinks">
				<a asp-area="" asp-controller="Projects" asp-action="Index">Sök projekt</a>
				<a asp-area="" asp-controller="Profiles" asp-action="Index">Sök profil</a>
			</div>
			<div class="loginOptions">
				<div class="dropdown">
					<button class="btn dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						Dropdown button
					</button>
					<div class="dropdown-menu">
						<form method="post" asp-controller="Account" asp-action="LogIn">
							<div class="mb-3">
								<label for="" class="form-label">Email address</label>
								<input asp-for="UserName" class="form-control" placeholder="Användarnamn">
							</div>
							<div class="mb-3">
								<label for="exampleDropdownFormPassword1" class="form-label">Password</label>
								<input type ="password" asp-for="Password" type="password" class="form-control" placeholder="Lösenord">
							</div>
							<div class="mb-3">
								<div class="form-check">
									<input type="checkbox" class="form-check-input" id="dropdownCheck">
									<label class="form-check-label" for="dropdownCheck">
										Kom ihåg mig
									</label>
								</div>
							</div>
							<button type="submit" class="btn btn-primary">Sign in</button>
						</form>
						<div class="dropdown-divider"></div>
						<a class="dropdown-item" href="#">Är du ny här? Registrera dig</a>
						<a class="dropdown-item" href="#">Glömt lösenord?</a>
					</div>
					<a asp-area="" asp-controller="Account" asp-action="Register">Registrera</a>
				</div>
			</div>
			<form method="post" asp-controller="Account" asp-action="Home" asp-action="Index">
				<AuthorizeView>
					<Authorized>
						<h2>Du är loggad in som @User.Identity.Name</h2>
						<input type="submit" value="Logga ut" />
					</Authorized>
				</AuthorizeView>
			</form>
		</nav>
	</header>
	<div class="content">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="footer text-muted">
		<div class="container">
			&copy; 2022 - CV_Projektet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
